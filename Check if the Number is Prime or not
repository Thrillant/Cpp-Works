#include <iostream>
using namespace std;
int main()
{
    int n, a = 0;
    cout << "Enter the number you want to check : ";
    cin >> n;
    for (int i = 2; i * i <= n; i++)
    {
        if (n % i == 0)
        {
            a = 1;
        }
    }
    if (a == 1)
    {
        cout << "The number is not prime";
    }
    else
    {
        cout << "The number is prime";
    }
    return 0;
}
